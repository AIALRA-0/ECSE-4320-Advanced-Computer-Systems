# ============================================================
# config.env - Unified Experiment Environment Configuration
# ============================================================

# NUMA binding
export CPU_NODE=0          # Bind all tasks to NUMA node 0
export CORES="0-3"         # Use CPU cores 0-3

# Repetition & runtime control
export REPEAT=3            # Each test repeated 3 times for stddev
export WARMUP_SEC=3        # Warm-up phase before measurement
export RUNTIME_SEC=10      # Active measurement duration (seconds)

# Paths for results / figures / reports
export RESULT_ROOT="$(pwd)/results"
export FIG_ROOT="$(pwd)/figs"
export OUT_ROOT="$(pwd)/out"

# Thread count (used in multi-threaded tests)
export THREADS=4

# Python environment (ensure .venv is created)
export PATH="$(pwd)/.venv/bin:$PATH"
export PYTHON_BIN="$(pwd)/.venv/bin/python"

# Note:
# 1. Before running any test script, always do:
#    source ./config.env
# 2. Ensure the directories exist:
#    mkdir -p "$RESULT_ROOT" "$FIG_ROOT" "$OUT_ROOT"
# ============================================================
